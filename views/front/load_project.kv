# load_project.kv
<LoadProject>:
    project_spinner: project_spinner_id
    BoxLayout:
        orientation: 'vertical'

        ActionBar:
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: 'Back'
                    with_previous: False
                    on_release: root.manager.current = 'start_menu'
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.3, 1
                spacing: 30
                padding: 10
                Button:
                    text: 'Select projects Folder'
                    height: 40
                    on_press: root.open_filechooser()

                Spinner:
                    id: project_spinner_id
                    text: "Select a project"
                    values:
                    size_hint_y: 0.5
                    height: 40
                    on_text: root.set_project_data(self.text)

                Button:
                    text: 'Use project'
                    height: 40
                    on_press: root.edit_project_data()

            BoxLayout:
                orientation: 'vertical'
                padding: 10
                spacing: 10

                GridLayout:
                    size_hint_y: 0.3
                    cols: 2
                    Label:
                        id: coord1Id
                        text: "Coord1"
                    Label:
                        id: coord2Id
                        text: "Coord2"

                BoxLayout:
                    size_hint_y: 0.8
                    Image:
                        id: preview
                        source: 'path/to/your/image.png'
