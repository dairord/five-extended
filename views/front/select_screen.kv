<SelectScreen>:
    coord1_input: coord1_input_id
    coord2_input: coord2_input_id
    map_image: map_image_id
    switch: switch_id

    BoxLayout:
        orientation: 'vertical'

        ActionBar:
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: 'Back'
                    with_previous: False
                    on_release: root.manager.current = 'start_menu'
                   
        GridLayout:
            cols: 4
            size_hint_y: None
            height: 30

            TextInput:
                id: coord1_input_id
                text: "39.489113, -0.514737"
                multiline: False

            Button:
                text: 'Paste'
                on_press: root.handle_paste(self, coord1_input_id)

            TextInput:
                id: coord2_input_id
                text: "39.488820, -0.514083"
                multiline: False
            Button:
                text: 'Paste'
                on_press: root.handle_paste(self, coord2_input_id)
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None

            Label:
                text: 'Search Motor: MapTiler' if switch_id.active else 'Search Motor: Google'
                
            Switch:
                id: switch_id
                active: True

        Image:
            id: map_image_id
            source: 'map_placeholder.png'

        BoxLayout:
            size_hint_y: None
            height: 30

            Button:
                text: 'Select Image'
                on_press: root.next_window(self)

            Button:
                text: 'Reload Image'
                on_press: root.reload_image(self)
