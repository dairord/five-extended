WindowManager:
    MainWindow:
    SecondWindow:
    ThirdWindow:

<MainWindow>:
    name: "main"

    GridLayout:
        cols: 1

        GridLayout:
            cols: 2

            GridLayout:
                cols: 2
                Label:
                    text: "Latitude: "
                TextInput:
                    id: latitude
                    multiline: False

            GridLayout:
                cols: 2
                Label:
                    text: "Longitude: "
                TextInput:
                    id: longitude
                    multiline: False

        Button:
            text: "Submit"
            on_release:
                app.process_coordinates(latitude.text, longitude.text)
                app.root.current = "second"

<SecondWindow>:
    name: "second"

    BoxLayout:
        orientation: "vertical"
        Image:
            id: map_image
            source: "path/to/your/fetched/image.png"  # This will be dynamically updated in your Python code.
        Button:
            text: "Go Back"
            on_release: app.root.current = "main"
